<section class='cont-carrito'>
  <h1>Carrito de Productos</h1>

  {{#if data.products}}
  <br />
  <a href='/products'>Ir a productos</a>
  <div>
    <br />
    <ul class='list-carrito' data-cart-id='{{data._id}}'>
      {{#each data.products}}
      <li>
        <picture>
          {{#each this.product.thumbnails}}
          <img src={{this.path}} alt={{this.name}} />
          {{/each}}
        </picture>
        <div class='list-carrito-des'>
          <h3>{{this.product.title}}</h3>
          <p>{{this.product.description}}</p>
          <p><strong>Precio:</strong> {{this.product.price}}</p>
          <p><strong>Código:</strong> {{this.product.code}}</p>
          <p><strong>Categoría:</strong> {{this.product.category}}</p>
        </div>
        <div>
          <p><strong>Cantidad:</strong> {{this.quantity}}</p>
          <section class='btn-delete'>
            <button class='btn-delete-cart' data-product-id='{{this.product._id}}'>Quitar</button>
          </section>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class='btn-checkout'>
    <div>
      <button>Comprar</button>
    </div>
  </div>
  {{else}}
  <div>
    <p>No hay productos en el carrito</p>
    <a href='/products'>Añadir productos</a>
  </div>
  {{/if}}
</section>

<style>
  .cont-carrito {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1rem;
  }

  .cont-carrito h1 {
    font-size: 1.4rem;
    display: inline-block;
    margin-bottom:
      1rem;
  }

  .list-carrito {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .list-carrito li {
    display: grid;
    grid-template-columns: 250px 1fr auto;
    align-items: center;
    background-color: #303030;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .list-carrito li div {
    padding: 1rem;
  }

  .list-carrito li picture {
    width: 100%;
    max-width: 250px;
    border-radius: 0.5rem;
  }

  @media screen and (max-width: 650px) {
    .list-carrito li {
      display: flex;
      flex-direction: column;
    }

    .list-carrito li div {
      width: 100%;
    }
  }

  .btn-delete {
    padding: 1rem 0;
    display: flex;
    justify-content: end;
  }

  .btn-delete button {
    background-color: rgb(202, 69, 69);
  }

  .btn-checkout {
    display: flex;
    justify-content: end;
    padding: 1rem 0;
  }
</style>

<script>
  const btns = document.querySelectorAll('.btn-delete-cart');
  const listCart = document.querySelector('.list-carrito');

  btns.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const idProd = btn.getAttribute('data-product-id');
      const idCart = listCart.getAttribute('data-cart-id');
      fetch(`/api/carts/${idCart}/products/${idProd}`, {
        method: 'DELETE'
      })
        .then(response => response.json())
        .then(product => {
          alert(product?.message);
          window.location.reload();
        })
        .catch(error =>
          console.error(`Error: ${error}`));
    });
  });
</script>